<%- include("partials/header") %>

<% if(darkTheme){ %>
    <link rel="stylesheet" href="/home.css">
<% }else{ %>
    <link rel="stylesheet" href="/home_light.css">
<% } %>

<div class="container">
    <div class="jumbotron"> Archive for <%= currentUser.name %> </div>
    <div class="row">
        <% if(user.archives.length!=0){ %>
            <% user.archives.forEach(function(item){ %>
                <div class = "col-sm-12 col-md-6 col-lg-4">
                    <div class="thumbnail">
                        <img src="<%= item.image %>" alt="">
                        <div class="caption">
                            <h4><%= item.title %></h4>
                        </div>
                        <div>
                            <a href="/toDoApp/<%= currentUser._id%>/archives/<%= item._id%>"><button type="button" class="btn btn-info">Details</button></a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>   
</div>

<%- include("partials/footer") %>