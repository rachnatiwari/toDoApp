<html>
    <% if(darkTheme){ %>
        <link rel="stylesheet" href="/header.css">
        <head>
            <title>To-Do App</title>
            <script src="https://code.jquery.com/jquery-2.2.4.js" integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
        </head>
        <body>
            <nav class="navbar navbar-light bg-light navbar-static-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">
                            <i class="fas fa-clipboard-list" style="font-size: 1.2em;"></i>
                            <strong style="font-size: 1.2em;">To-Do App</strong>
                        </a>
                        <a  class="navbar-brand" href="/toDoApp/<%= currentUser._id %>/archives" id="archive"><strong style="font-size: 1.2em;">Archives</strong></a>
                        <a  class="navbar-brand" href="/toDoApp/<%= currentUser._id %>/changeTheme"><i class="fas fa-palette" style="font-size: 1.3em;"></i></a>
                    </div>
                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <% if(!currentUser){ %>
                                <li><a class="navbar-brand" href="/toDoApp/login" id="texts"><strong style="font-size: 1.1em;">Login</strong></a></li>
                                <li><a class="navbar-brand" href="/toDoApp/signup" id="texts"><strong style="font-size: 1.1em;">Signup</strong></a></li>
                            <% } else { %>
                                <li><a class="navbar-brand" href="/toDoApp/logout" id="texts"><strong style="font-size: 1.1em;">Logout</strong></a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </nav>
    <% }else{ %>
        <link rel="stylesheet" href="/header_light.css">
        <head>
            <title>To-Do App</title>
            <script src="https://code.jquery.com/jquery-2.2.4.js" integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
        </head>
        <body>
            <nav class="navbar navbar-dark bg-dark navbar-static-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">
                            <i class="fas fa-clipboard-list" style="font-size: 1.2em;"></i>
                            <strong style="font-size: 1.2em;">To-Do App</strong>
                        </a>
                        <a  class="navbar-brand" href="/toDoApp/<%= currentUser._id %>/archives" id="archive"><strong style="font-size: 1.2em;">Archives</strong></a>
                        <a  class="navbar-brand" href="/toDoApp/<%= currentUser._id %>/changeTheme"><i class="fas fa-palette" style="font-size: 1.3em;"></i></a>
                    </div>
                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <% if(!currentUser){ %>
                                <li><a class="navbar-brand" href="/toDoApp/login" id="texts"><strong style="font-size: 1.1em;">Login</strong></a></li>
                                <li><a class="navbar-brand" href="/toDoApp/signup" id="texts"><strong style="font-size: 1.1em;">Signup</strong></a></li>
                            <% } else { %>
                                <li><a class="navbar-brand" href="/toDoApp/logout" id="texts"><strong style="font-size: 1.1em;">Logout</strong></a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </nav>
    <% } %>