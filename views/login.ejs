<%- include("partials/header") %>

<% if(darkTheme){ %>
    <link rel="stylesheet" href="/form.css">
<% }else{ %>
    <link rel="stylesheet" href="/form_light.css">
<% } %>

<div class="container" id="topic">
    <div class="alert">
        Welcome to To-Do App - Login
    </div>
</div>
<div class="container" id="form-box">
    <form class="form-horizontal" action="/toDoApp/login" method="POST">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label"> Username :</label>
            <input class="form-control" type="email" name="username" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label"> Password :</label>
            <input class="form-control" type="password" name="password" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>
    <div class="form-group" id="form-footer">
        <strong style="font-size: 1.1em;"> New User? </strong><a href="/toDoApp/signup"><button class="btn btn-info" style="width: 100px;">Register</button></a>
    </div>
</div>

<%- include("partials/footer") %>